	},
	"homepage": "https://github.com/ESIMIOS/e.firma#readme",
	"dependencies": {
		"cross-fetch": "^3.1.5",
		"node-forge": "^1.3.1"
	},
	"devDependencies": {
		"@types/jest": "^29.2.5",
		"@types/node": "^18.11.18",
		"@types/node-forge": "^1.3.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tsuml2": "^0.7.0",
		"typescript": "^4.9.4"
