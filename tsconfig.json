{
	"compilerOptions": {
		"esModuleInterop": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["./src/**/*", "./index.ts"]
}
