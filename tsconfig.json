{
	"compilerOptions": {
		"esModuleInterop": true,
		"outDir": "./lib",
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"module": "commonjs",
		"target": "ES2015",
		"jsx": "react",
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["./src/**/*", "./index.ts"],
	"exclude": ["node_modules", "./__tests__/**/*", "./__mocks__/**/*", "./__coverage__/**/*"]
}
